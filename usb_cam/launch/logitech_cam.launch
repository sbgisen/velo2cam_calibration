<launch>
  <node name="logitech_cam" pkg="usb_cam" type="usb_cam_node" >
    <param name="video_device" value="/dev/video0" />
    <param name="image_width" value="640" />
    <param name="image_height" value="480" />
    <param name="pixel_format" value="mjpeg" />
    <param name="camera_frame_id" value="logitech_cam" />
    <param name="io_method" value="mmap"/>
		<param name="contrast" value="125" />
		<param name="brightness" value="100" />
    <param name="autofocus" value="false" />
		<param name="focus" value="20" />
		<param name="camera_info_url" value="file://$(find usb_cam)/config/logitech_cam.yaml" />
		<param name="camera_name" value="logitech_cam" />
  </node>


  <node name="image_view" pkg="image_view" type="image_view" respawn="false" >
    <remap from="image" to="/logitech_cam/image_raw"/>
    <param name="autosize" value="true" />
  </node>

  <node name="image_proc" pkg="image_proc" type="image_proc" ns="/logitech_cam" respawn="false" >
  </node>

</launch>
